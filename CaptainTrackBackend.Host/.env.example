# Environment Variables Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Database Connection String
ConnectionStrings__CaptainTrackConnectionString=server=YOUR_SERVER;database=YOUR_DATABASE;user=YOUR_USER;password=YOUR_PASSWORD;

# JWT Configuration
Jwt__Key=YOUR_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS
Jwt__Issuer=CaptainTrack
Jwt__Audience=CaptainTrackUser

# SMTP Settings (Email)
SmtpSettings__Host=smtp.gmail.com
SmtpSettings__Port=587
SmtpSettings__Username=YOUR_EMAIL@gmail.com
SmtpSettings__Password=YOUR_APP_PASSWORD
SmtpSettings__FromEmail=YOUR_EMAIL@gmail.com

# Flutterwave Payment
Flutterwave__SecretKey=YOUR_FLUTTERWAVE_SECRET_KEY
Flutterwave__PublicKey=YOUR_FLUTTERWAVE_PUBLIC_KEY
Flutterwave__BaseUrl=https://api.flutterwave.com/v3

# Google Maps
GoogleMaps__ApiKey=YOUR_GOOGLE_MAPS_API_KEY

# Cloudinary (File Upload)
CloudinarySettings__CloudName=YOUR_CLOUDINARY_CLOUD_NAME
CloudinarySettings__ApiKey=YOUR_CLOUDINARY_API_KEY
CloudinarySettings__ApiSecret=YOUR_CLOUDINARY_API_SECRET

# Hollatags (SMS)
Hollatags__User=YOUR_HOLLATAGS_USERNAME
Hollatags__Pass=YOUR_HOLLATAGS_PASSWORD
Hollatags__From=Captaint
Hollatags__CallbackUrl=https://yourdomain.com/api/sms/callback

# Firebase
Firebase__DatabaseUrl=https://YOUR_PROJECT.firebaseio.com/
Firebase__ServiceAccountKeyPath=serviceAccountKey.json

# CORS Origins (for Development, use localhost)
Cors__AllowedOrigins__0=http://localhost:3000
Cors__AllowedOrigins__1=http://localhost:5173
Cors__AllowedOrigins__2=http://localhost:4200
